{
    "TenantId": "your-tenant-id-here",
    "ClientId": "your-app-client-id-here",
    "ExchangeServer": "exchange2019.company.local",
    "IncludePIM": true,
    "IncludeConditionalAccess": true,
    "IncludeAuditLogs": true,
    "AuditDaysBack": 30,
    "EmailSettings": {
        "Recipients": [
            "security@company.com",
            "privileged-access-team@company.com"
        ],
        "From": "privileged-access-audit@company.com",
        "SmtpServer": "smtp.company.com",
        "Port": 587,
        "UseSSL": true
    },
    "RoleFilter": {
        "IncludeBuiltInRoles": true,
        "IncludeCustomRoles": true,
        "ExcludeRoles": [],
        "HighPrivilegeRoles": [
            "Global Administrator",
            "Privileged Role Administrator",
            "Security Administrator",
            "Exchange Administrator",
            "SharePoint Administrator",
            "User Administrator",
            "Billing Administrator",
            "Conditional Access Administrator"
        ]
    },
    "ComplianceChecks": {
        "RequireMFA": true,
        "RequireConditionalAccess": true,
        "MaxPermanentAssignments": 5,
        "AlertOnServiceAccounts": true,
        "CheckLastSignIn": true,
        "InactivityThresholdDays": 90
    }
}